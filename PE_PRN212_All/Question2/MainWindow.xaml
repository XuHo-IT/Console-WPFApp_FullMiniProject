<Window x:Class="Question2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Question2"
        mc:Ignorable="d"
        Title="MainWindow" Height="515" Width="825">
    <Grid Margin="0,0,10,9" RenderTransformOrigin="0.5,0.5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="815*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="0.015"/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>
        <DataGrid x:Name="dataGridBooks" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,49,265,0" 
                  SelectionChanged="dataGridBooks_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Book ID" Binding="{Binding BookId}" Width="70"/>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="250"/>
                <DataGridTextColumn Header="Publisher" Binding="{Binding Publisher}" Width="100"/>
                <DataGridTextColumn Header="PublicationYear" Binding="{Binding PublicationYear}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock HorizontalAlignment="Left" Margin="560,65,0,0" TextWrapping="Wrap" Text="BookID" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="560,135,0,0" TextWrapping="Wrap" Text="Title" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="563,201,0,0" TextWrapping="Wrap" Text="Publisher" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="560,280,0,0" TextWrapping="Wrap" Text="Publication Year" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBookID" HorizontalAlignment="Left" Margin="560,86,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="215"/>
        <TextBox x:Name="txtTitle" HorizontalAlignment="Left" Margin="560,156,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="215"/>
        <TextBox  x:Name="txtPublisher" HorizontalAlignment="Left" Margin="561,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="215"/>
        <TextBox x:Name="txtPublicationYear" HorizontalAlignment="Left" Margin="560,301,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="215"/>
        <Button Content="Save changes" HorizontalAlignment="Left" Margin="605,339,0,0" VerticalAlignment="Top" Height="35" Width="125"
                Click="SaveButton_Click"/>
        <Button Content="Create" HorizontalAlignment="Left" Margin="561,407,0,0" VerticalAlignment="Top" Height="35" Width="110"
        Click="CreateButton_Click"/>
        <Button Content="Delete" HorizontalAlignment="Left" Margin="701,407,0,0" VerticalAlignment="Top" Height="35" Width="110"
        Click="DeleteButton_Click"/>

        <TextBox x:Name="txtSearchTitle" HorizontalAlignment="Left" Margin="30,19,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135"  Tag="Title"/>
        <TextBox x:Name="txtSearchPublisher" HorizontalAlignment="Left" Margin="180,19,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135"  Tag="Publisher"/>
        <TextBox x:Name="txtSearchYear" HorizontalAlignment="Left" Margin="340,19,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180"  Tag="Publication Year"/>
        <Button Content="Search" HorizontalAlignment="Left" Margin="560,19,0,0" VerticalAlignment="Top" Height="18" Width="125" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0"/>
                    <RotateTransform/>
                    <TranslateTransform X="0"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <TextBlock HorizontalAlignment="Left" Margin="30,3,0,0" TextWrapping="Wrap" Text="Title" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="180,3,0,0" TextWrapping="Wrap" Text="Publisher" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="340,3,0,0" TextWrapping="Wrap" Text="Publication Year" VerticalAlignment="Top"/>



    </Grid>
</Window>
