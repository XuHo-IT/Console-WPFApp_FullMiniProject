<Window x:Class="Question2.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Question2"
        mc:Ignorable="d"
        Title="UserWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Search Fields -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,10" Grid.Row="0" Grid.ColumnSpan="2">
            <StackPanel Margin="0,0,10,0">
                <TextBlock Text="Search by Full Name" Margin="0,5,0,0"/>
                <TextBox x:Name="FullNameSearchBox" Width="200" Margin="0,0,0,10" />
            </StackPanel>
            <StackPanel Margin="0,0,10,0">
                <TextBlock Text="Search by Email" Margin="0,5,0,0"/>
                <TextBox x:Name="EmailSearchBox" Width="200" Margin="0,0,0,10"  />
            </StackPanel>
            <Button Content="Search" Width="100" Height="34" VerticalAlignment="Center" Click="SearchButton_Click"/>
        </StackPanel>

        <!-- User DataGrid -->
        <DataGrid x:Name="UserDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" SelectionMode="Single" 
                  Grid.Row="1" Grid.Column="0" Margin="0,0,10,10" Width="Auto"  SelectionChanged="dataGridBooks_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="UserID" Binding="{Binding UserID}" Width="50"/>
                <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="70"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="150"/>
                <DataGridTextColumn Header="Membership Date" Binding="{Binding MembershipDate}" Width="100"/>
                <DataGridTextColumn Header="Gender" Binding="{Binding Gender}" Width="50"/>
                <DataGridTextColumn Header="Position" Binding="{Binding Position}" Width="70"/>


            </DataGrid.Columns>
        </DataGrid>

        <!-- User Details Panel -->
        <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" Margin="10,0,0,0" Height="339" RenderTransformOrigin="0.5,0.5">
            <TextBlock Text="Full Name" Margin="0,5,0,5" FontSize="14"/>
            <TextBox x:Name="FullNameTextBox" Width="258"/>

            <TextBlock Text="Email" Margin="0,5,0,5" FontSize="14"/>
            <TextBox x:Name="EmailTextBox" Width="266"/>

            <TextBlock Text="Membership Date" Margin="0,5,0,5" FontSize="14"/>
            <DatePicker x:Name="MembershipDatePicker" Width="263" IsTodayHighlighted="True"/>

            <!-- Gender Selection RadioButton -->
            <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
                <TextBlock Text="Gender" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <RadioButton x:Name="MaleRadioButton" Content="Male" Margin="0,0,10,0" GroupName="Gender"/>
                <RadioButton x:Name="FemaleRadioButton" Content="Female" GroupName="Gender"/>
            </StackPanel>

             
            <!-- Position Selection ComboBox -->
            <TextBlock Text="Position" Margin="0,5,0,5" FontSize="14"/>
            <ComboBox x:Name="PositionComboBox" Width="270">
                <ComboBoxItem Content="Manager"/>
                <ComboBoxItem Content="Assistant"/>
                <ComboBoxItem Content="Employee"/>
                <ComboBoxItem Content="Intern"/>
            </ComboBox>

            <Button Content="Save Changes" Width="100" Click="SaveChanges_Click" Height="34" HorizontalAlignment="Center" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
