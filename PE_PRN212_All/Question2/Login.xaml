<Window x:Class="PRN212_FA24_PE_121844_Q2.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN212_FA24_PE_121844_Q2"
        mc:Ignorable="d"
        Title="Login"   Height="400" 
  Width="700"
  FontFamily="Tahoma"
  FontSize="13"
  Background="#FFF2F184"
  WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Label for Username -->
        <Label Content="Username:" 
            FontFamily="Arial Narrow" 
            FontSize="12" 
            Foreground="Blue" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Margin="20,20,0,0"/>

        <!-- TextBox for Username with right-aligned text -->
        <TextBox Name="UsernameTextBox" 
              HorizontalAlignment="Left" 
              VerticalAlignment="Top" 
              Width="200" 
              Height="30" 
              Margin="120,20,0,0" 
              TextAlignment="Right"/>

        <!-- Label for Password -->
        <Label Content="Email:" 
            FontFamily="Arial Narrow" 
            FontSize="12" 
            Foreground="Blue" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Margin="20,70,0,0"/>

        <!-- PasswordBox for Password with right-aligned content -->
        <PasswordBox Name="PasswordTextBox" 
                  HorizontalAlignment="Left" 
                  VerticalAlignment="Top" 
                  Width="200" 
                  Height="30" 
                  Margin="120,70,0,0" 
                  HorizontalContentAlignment="Right"/>

        <!-- Login Button -->
        <Button Content="Login" 
             Width="100" 
             Height="30" 
             HorizontalAlignment="Left" 
             VerticalAlignment="Top" 
             Margin="120,120,0,0" 
             Click="LoginButton_Click"/>
    </Grid>
</Window>
